<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nblenovo.simplecalculator.MainActivity"
    android:background="@android:color/black">

    <Button
        android:text="clr"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btnclr"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="6"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn6"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:textColor="@android:color/background_light"
        android:layout_alignEnd="@+id/btn9"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:text="8"
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/btn4"
        android:layout_alignTop="@+id/btn7"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btn5" />

    <Button
        android:text="5"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn5"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn2"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/btn1"
        android:layout_alignTop="@+id/btn1"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btn0" />

    <Button
        android:text="+"
        android:layout_height="75dp"
        android:id="@+id/add"
        android:textSize="40sp"
        android:background="@color/colorPrimaryDark"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light"
        android:layout_alignStart="@+id/div" />

    <Button
        android:text="0"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn0"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn6" />

    <Button
        android:text="9"
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:text="/"
        android:id="@+id/div"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:background="@android:color/holo_purple"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="80dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/equal" />

    <Button
        android:text="x"
        android:id="@+id/mult"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:background="@android:color/holo_orange_light"
        android:padding="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_width="80dp"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignStart="@+id/div" />

    <Button
        android:text="-"
        android:layout_height="75dp"
        android:id="@+id/sub"
        android:textSize="40sp"
        android:background="@android:color/holo_blue_bright"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="80dp"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignStart="@+id/add"
        android:layout_alignTop="@+id/btn3" />

    <Button
        android:text="4"
        android:layout_width="80dp"
        android:id="@+id/btn4"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true" />

    <Button
     android:text="1"
     android:layout_width="80dp"
     android:layout_height="75dp"
     android:id="@+id/btn1"
        android:textSize="40sp"
     android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btnclr"
        android:layout_toStartOf="@+id/btn5" />

    <Button
        android:text="7"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn7"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="3"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btn3"
        android:textSize="40sp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:layout_alignStart="@+id/btn6" />

    <Button
        android:text="del"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/btnDel"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn3"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/equal"
        android:textSize="40sp"
        android:fontFamily="sans-serif"
        android:elevation="0dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="="
        android:layout_marginBottom="11dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btn8"
        android:layout_alignEnd="@+id/et" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et"
        android:layout_width="350dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/result"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/black"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/et"
        android:layout_alignParentStart="true" />

</RelativeLayout>
